<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".NewActivity1"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="740dp"
        android:layout_gravity="bottom"
        android:background="@drawable/enrico1"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:gravity="center"
            android:text="@string/ad_m"
            android:textColor="@color/white"
            android:textSize="39dp"
            app:layout_constraintTop_toBottomOf="@+id/text"
            tools:layout_editor_absoluteX="16dp" />

        <ImageView
            android:id="@+id/image1.1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toTopOf="@+id/text2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text1"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageView
            android:id="@+id/image1.2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/text2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/image1.1"
            app:layout_constraintTop_toBottomOf="@+id/text1"
            app:layout_constraintVertical_bias="0.4"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:gravity="center"
            android:text="@string/la_f"
            android:textColor="@color/white"
            android:textSize="35dp"
            app:layout_constraintTop_toBottomOf="@+id/text1"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/image2.1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/text3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageView
            android:id="@+id/image2.2"
            android:layout_width="109dp"
            android:layout_height="58dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/text3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image2.1"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="106dp"
            android:gravity="center"
            android:text="@string/les_f"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/image3.1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/text4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text3"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageView
            android:id="@+id/image3.2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/text4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image3.1"
            app:layout_constraintTop_toBottomOf="@+id/text3"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:gravity="center"
            android:text="@string/oh_g"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text3"
            tools:layout_editor_absoluteX="25dp" />

        <ImageView
            android:id="@+id/image4.1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text4"
            app:layout_constraintVertical_bias="0.04"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageView
            android:id="@+id/image4.2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="76dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image4.1"
            app:layout_constraintTop_toBottomOf="@+id/text4"
            app:layout_constraintVertical_bias="0.02"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Enrico macias"
            android:textColor="@color/white"

            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
